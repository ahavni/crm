<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <servlet-name>RegisterUserServlet</servlet-name>
        <servlet-class>web.ani.servlets.RegisterUserServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CreateDBServlet</servlet-name>
        <servlet-class>web.ani.servlets.CreateDBServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ListAllUserServlet</servlet-name>
        <servlet-class>web.ani.servlets.ListAllUserServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>web.ani.servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>UserDetailsServlet</servlet-name>
        <servlet-class>web.ani.servlets.UserDetailsServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ListAllCustomersServlet</servlet-name>
        <servlet-class>web.ani.servlets.ListAllCustomersServlet</servlet-class>
    </servlet>

    <!-- mapping -->
    <servlet-mapping>
        <servlet-name>RegisterUserServlet</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CreateDBServlet</servlet-name>
        <url-pattern>/createDB</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ListAllUserServlet</servlet-name>
        <url-pattern>/listAllUsers</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UserDetailsServlet</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ListAllCustomersServlet</servlet-name>
        <url-pattern>/listAllCustomers</url-pattern>
    </servlet-mapping>

</web-app>
