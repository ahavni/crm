<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <servlet-name>RegisterUserServlet</servlet-name>
        <servlet-class>web.ani.servlets.RegisterUserServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CreateDBServlet</servlet-name>
        <servlet-class>web.ani.servlets.CreateDBServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ListAllUserServlet</servlet-name>
        <servlet-class>web.ani.servlets.ListUsersServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>web.ani.servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>UserDetailsServlet</servlet-name>
        <servlet-class>web.ani.servlets.UserDetailsServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ListAllCustomersServlet</servlet-name>
        <servlet-class>web.ani.servlets.ListCustomersServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>SearchUserServlet</servlet-name>
        <servlet-class>web.ani.servlets.SearchUserServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AssignUsersServlet</servlet-name>
        <servlet-class>web.ani.servlets.AssignUsersServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AddProductServlet</servlet-name>
        <servlet-class>web.ani.servlets.AddProductServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>BuyProductsServlet</servlet-name>
        <servlet-class>web.ani.servlets.BuyProductsServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ListProductsServlet</servlet-name>
        <servlet-class>web.ani.servlets.ListProductsServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ListCustomersProductsServlet</servlet-name>
        <servlet-class>web.ani.servlets.ListCustomersProductsServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ListConsultantsCustomersServlet</servlet-name>
        <servlet-class>web.ani.servlets.ListConsultantsCustomersServlet</servlet-class>
    </servlet>

    <!-- mapping -->
    <servlet-mapping>
        <servlet-name>RegisterUserServlet</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CreateDBServlet</servlet-name>
        <url-pattern>/createDB</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ListAllUserServlet</servlet-name>
        <url-pattern>/listAllUsers</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UserDetailsServlet</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ListAllCustomersServlet</servlet-name>
        <url-pattern>/listAllCustomers</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SearchUserServlet</servlet-name>
        <url-pattern>/searchUser</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AssignUsersServlet</servlet-name>
        <url-pattern>/assignUsers</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AddProductServlet</servlet-name>
        <url-pattern>/addProduct</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>BuyProductsServlet</servlet-name>
        <url-pattern>/buyProducts</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ListProductsServlet</servlet-name>
        <url-pattern>/listProducts</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ListCustomersProductsServlet</servlet-name>
        <url-pattern>/listCustomersProductsServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ListConsultantsCustomersServlet</servlet-name>
        <url-pattern>/listConsultantsCustomersServlet</url-pattern>
    </servlet-mapping>

</web-app>
